<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeScreen</servlet-name>
        <servlet-class>Servlets.HomeScreen</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeScreen</servlet-name>
        <url-pattern>/homeScreen</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewProducts</servlet-name>
        <servlet-class>Servlets.ViewProducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProducts</servlet-name>
        <url-pattern>/ViewProducts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>Servlets.AddToCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/AddToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error</servlet-name>
        <servlet-class>Servlets.Error</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
</web-app>